{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",

    "moduleResolution": "node",
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "resolveJsonModule": true,

    "lib": ["ES2020", "DOM"],

    "typeRoots": [
       "./node_modules/@types"
    ]
  },
  "include": ["src"]
}
